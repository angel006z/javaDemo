<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meida.backend.basic.dao.inter.IRoleDao">

	<resultMap id="myResultMap"
		type="com.meida.backend.basic.po.Role">
		<id property="roleId" column="roleId"></id>
		<result property="roleCode" column="roleCode"></result>
		<result property="roleName" column="roleName"></result>
		<result property="roleSort" column="roleSort"></result>
		<result property="createDate" column="createDate"></result>
		<result property="operateDate" column="operateDate"></result>
		<result property="operatorId" column="operatorId"></result>
		<result property="isValid" column="isValid"></result>
		<result property="remark" column="remark"></result>
	</resultMap>


	<select id="getObjectById" parameterType="java.lang.String"
		resultMap="myResultMap">
		select
		roleId,roleCode,roleName,roleSort,createDate,operateDate,operatorId,isValid,remark
		from tbRole where roleId=#{id}
	</select>

	<select id="getListByAll" resultMap="myResultMap">
		select
		roleId,roleCode,roleName,roleSort,createDate,operateDate,operatorId,isValid,remark
		from tbRole
	</select>


	<select id="getListByValid" resultMap="myResultMap">
		select
		roleId,roleCode,roleName,roleSort,createDate,operateDate,operatorId,isValid,remark
		from tbRole where isValid=1
	</select>

	<select id="getListByPage"
		parameterType="com.meida.backend.basic.dto.RoleListDto"
		resultMap="myResultMap">
		select
		roleId,roleCode,roleName,roleSort,createDate,operateDate,operatorId,isValid,remark
		from tbRole
		where isValid=1
		<if test="roleCode != null and roleCode!=''">
			AND roleCode like "%"#{roleCode}"%"
		</if>
		<if test="roleName != null and roleName!=''">
			AND roleName like "%"#{roleName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<select id="getTotalRecord"
		parameterType="com.meida.backend.basic.dto.RoleListDto" resultType="java.lang.Long">
		select count(*) from tbRole
		where isValid=1
		<if test="roleCode != null and roleCode!=''">
			AND roleCode like "%"#{roleCode}"%"
		</if>
		<if test="roleName != null and roleName!=''">
			AND roleName like "%"#{roleName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<insert id="save"
		parameterType="com.meida.backend.basic.po.Role">
		insert into tbRole (roleId,roleCode,roleName,roleSort,createDate,operateDate,operatorId,isValid,remark) values
		(#{roleId},#{roleCode},#{roleName},#{roleSort},#{createDate},#{operateDate},#{operatorId},#{isValid},#{remark})
	</insert>


	<update id="update"
		parameterType="com.meida.backend.basic.po.Role">
		update tbRole
		<set>
			<if test="roleCode!=null">
				roleCode=#{roleCode},
			</if>
			<if test="roleCode!=null">
				roleName=#{roleName},
			</if>
			<if test="roleSort!=null">
				roleSort=#{roleSort},
			</if>
			<if test="operateDate!=null">
				operateDate=#{operateDate},
			</if>
			<if test="remark!=null">
				remark=#{remark} 
			</if>
		</set>
		where roleId=#{roleId}
	</update>


	<delete id="deletePhysicalById" parameterType="java.lang.String">
		delete from tbRole
		where roleId=#{id}
	</delete>


	<delete id="deleteLogicById" parameterType="java.lang.String">
		update tbRole set
		isValid=-1 where roleId=#{id}
	</delete>

</mapper>