<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meida.backend.basic.dao.inter.IDeptDao">

	<resultMap id="myResultMap"
		type="com.meida.backend.basic.domain.po.Dept">
		<id property="deptId" column="deptId"></id>
		<result property="deptCode" column="deptCode"></result>
		<result property="deptName" column="deptName"></result>
		<result property="deptSort" column="deptSort"></result>
		<result property="createDate" column="createDate"></result>
		<result property="operateDate" column="operateDate"></result>
		<result property="operatorId" column="operatorId"></result>
		<result property="isValid" column="isValid"></result>
		<result property="remark" column="remark"></result>
	</resultMap>


	<select id="getObjectById" parameterType="java.lang.String"
		resultMap="myResultMap">
		select
		deptId,deptCode,deptName,deptSort,createDate,createUserId,createUser,updateDate,updateUserId,updateUser,isValid,remark
		from tbDept where deptId=#{id}
	</select>

	<select id="getListByAll" resultMap="myResultMap">
		select
		deptId,deptCode,deptName,deptSort,createDate,createUserId,createUser,updateDate,updateUserId,updateUser,isValid,remark
		from tbDept
	</select>


	<select id="getListByValid" resultMap="myResultMap">
		select
		deptId,deptCode,deptName,deptSort,createDate,createUserId,createUser,updateDate,updateUserId,updateUser,isValid,remark
		from tbDept where isValid=1
	</select>

	<select id="getListByPage"
		parameterType="com.meida.backend.basic.domain.dto.DeptListDto"
		resultMap="myResultMap">
		select
		deptId,deptCode,deptName,deptSort,createDate,createUserId,createUser,updateDate,updateUserId,updateUser,isValid,remark
		from tbDept
		where isValid=1
		<if test="deptCode != null and deptCode!=''">
			AND deptCode like "%"#{deptCode}"%"
		</if>
		<if test="deptName != null and deptName!=''">
			AND deptName like "%"#{deptName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<select id="getTotalRecord"
		parameterType="com.meida.backend.basic.domain.dto.DeptListDto" resultType="java.lang.Long">
		select count(*) from tbDept
		where isValid=1
		<if test="deptCode != null and deptCode!=''">
			AND deptCode like "%"#{deptCode}"%"
		</if>
		<if test="deptName != null and deptName!=''">
			AND deptName like "%"#{deptName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<insert id="save"
		parameterType="com.meida.backend.basic.domain.po.Dept">
		insert into tbDept (deptId,deptCode,deptName,deptSort,createDate,createUserId,createUser,updateDate,updateUserId,updateUser,isValid,remark) values
		(#{deptId},#{deptCode},#{deptName},#{deptSort},#{createDate},#{createUserId},#{createUser},#{updateDate},#{updateUserId},#{updateUser},#{isValid},#{remark})
	</insert>


	<update id="update"
		parameterType="com.meida.backend.basic.domain.po.Dept">
		update tbDept
		<set>
			<if test="deptCode!=null">
				deptCode=#{deptCode},
			</if>
			<if test="deptName!=null">
				deptName=#{deptName},
			</if>
			<if test="deptSort!=null">
				deptSort=#{deptSort}, 
			</if>
			<if test="operateDate!=null">
				operateDate=#{operateDate},
			</if>
			<if test="operatorId!=null">
				operatorId=#{operatorId},
			</if>
			<if test="remark!=null">
				remark=#{remark} 
			</if>			
		</set>
		where deptId=#{deptId}
	</update>


	<delete id="deletePhysicalById" parameterType="java.lang.String">
		delete from tbDept
		where deptId=#{id}
	</delete>


	<delete id="deleteLogicById" parameterType="java.lang.String">
		update tbDept set
		isValid=-1 where deptId=#{id}
	</delete>

</mapper>