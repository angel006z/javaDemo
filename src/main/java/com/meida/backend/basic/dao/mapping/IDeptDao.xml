<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.meida.backend.basic.dao.inter.IDeptDao">

	<resultMap id="myResultMap"
		type="com.meida.backend.basic.po.Dept">
		<id property="deptId" column="deptId"></id>
		<result property="deptCode" column="deptCode"></result>
		<result property="deptName" column="deptName"></result>
		<result property="createDate" column="createDate"></result>
		<result property="operateDate" column="operateDate"></result>
		<result property="operatorId" column="operatorId"></result>
		<result property="isValid" column="isValid"></result>
		<result property="remark" column="remark"></result>
	</resultMap>


	<select id="getObjectById" parameterType="java.lang.String"
		resultMap="myResultMap">
		select
		deptId,deptCode,deptName,createDate,operateDate,operatorId,isValid,remark
		from dept where deptId=#{id}
	</select>

	<select id="getListByAll" resultMap="myResultMap">
		select
		deptId,deptCode,deptName,createDate,operateDate,operatorId,isValid,remark
		from dept
	</select>


	<select id="getListByValid" resultMap="myResultMap">
		select
		deptId,deptCode,deptName,createDate,operateDate,operatorId,isValid,remark
		from dept where isValid=1
	</select>

	<select id="getListByPage"
		parameterType="com.meida.backend.basic.dto.DeptListDto"
		resultMap="myResultMap">
		select
		deptId,deptCode,deptName,createDate,operateDate,operatorId,isValid,remark
		from dept
		where isValid=1
		<if test="deptCode != null and deptCode!=''">
			AND deptCode like "%"#{deptCode}"%"
		</if>
		<if test="deptName != null and deptName!=''">
			AND deptName like "%"#{deptName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<select id="getTotalRecord"
		parameterType="com.meida.backend.basic.dto.DeptListDto" resultType="java.lang.Long">
		select count(*) from dept
		where isValid=1
		<if test="deptCode != null and deptCode!=''">
			AND deptCode like "%"#{deptCode}"%"
		</if>
		<if test="deptName != null and deptName!=''">
			AND deptName like "%"#{deptName}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<insert id="save"
		parameterType="com.meida.backend.basic.po.Dept">
		insert into dept (deptId,deptCode,deptName) values
		(#{deptId},#{deptCode},#{deptName})
	</insert>


	<update id="update"
		parameterType="com.meida.backend.basic.po.Dept">
		update dept
		<set>
			<if test="deptCode!=null">
				deptCode=#{deptCode},
			</if>
			<if test="deptCode!=null">
				deptName=#{deptName}
			</if>
		</set>
		where deptId=#{id}
	</update>


	<delete id="deletePhysicalById" parameterType="java.lang.String">
		delete from dept
		where deptId=#{id}
	</delete>


	<delete id="deleteLogicById" parameterType="java.lang.String">
		update dept set
		isValid=1 where deptId=#{id}
	</delete>

</mapper>