<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.meida.front.pay.dao.inter.IFundAmountDao">

	<resultMap id="myResultMap"
		type="com.meida.front.pay.domain.po.FundAmount">
		<id property="fundAmountId" column="fundAmountId"></id>
		<result property="memberId" column="memberId"></result>
		<result property="totalMoney" column="totalMoney"></result>
		<result property="createDate" column="createDate"></result>
		<result property="operateDate" column="operateDate"></result>
		<result property="operatorId" column="operatorId"></result>
		<result property="isValid" column="isValid"></result>
		<result property="remark" column="remark"></result>
	</resultMap>

	<select id="getObjectById" parameterType="java.lang.Long"
		resultMap="myResultMap">
		select
		fundAmountId,memberId,totalMoney,createDate,operateDate,operatorId,isValid,remark
		from tb_fund_amount where fundAmountId=#{id}
	</select>
	
	<select id="getObjectByMemberId" parameterType="java.lang.Long"
		resultMap="myResultMap">
		select
		fundAmountId,memberId,totalMoney,createDate,operateDate,operatorId,isValid,remark
		from tb_fund_amount where memberId=#{memberId}
	</select>
	
	<select id="isExistMemberId" parameterType="java.lang.Long"
		resultType="java.lang.Long">
		select count(*) from tb_fund_amount where
		memberId=#{memberId}
	</select>


	<select id="getListByAll" resultMap="myResultMap">
		select
		fundAmountId,memberId,totalMoney,createDate,operateDate,operatorId,isValid,remark
		from tb_fund_amount
	</select>


	<select id="getListByValid" resultMap="myResultMap">
		select
		fundAmountId,memberId,totalMoney,createDate,operateDate,operatorId,isValid,remark
		from tb_fund_amount where isValid=1
	</select>

	<resultMap id="myPageResultMap"
		type="com.meida.front.pay.domain.vo.FundAmountVo">
		<id property="fundAmountId" column="fundAmountId"></id>
		<result property="memberId" column="memberId"></result>
		<result property="totalMoney" column="totalMoney"></result>		
		<result property="createDate" column="createDate"></result>
		<result property="operateDate" column="operateDate"></result>
		<result property="operatorId" column="operatorId"></result>
		<result property="isValid" column="isValid"></result>
		<result property="remark" column="remark"></result>
	</resultMap>
	
	<select id="getListWhereByPage"
		parameterType="com.meida.front.pay.domain.dto.FundAmountListDto"
		resultMap="myPageResultMap">
		select
		a.fundAmountId,a.memberId,a.totalMoney,a.createDate,a.operateDate,a.operatorId,a.isValid,a.remark
		from tb_fund_amount as a
		where a.isValid=1
		<if test="memberId != null and memberId!=''">
			AND a.memberId like "%"#{memberId}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>
	
	<select id="getListByPage"
		parameterType="com.meida.front.pay.domain.dto.FundAmountListDto"
		resultMap="myPageResultMap">
		select
		a.fundAmountId,a.memberId,a.orderNo,a.totalMoney,a.createDate,a.operateDate,a.operatorId,a.isValid,a.remark
		from tb_fund_amount as a
		where a.isValid=1
		<if test="memberId != null and memberId!=''">
			AND a.memberId like "%"#{memberId}"%"
		</if>
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<select id="getTotalRecord"
		parameterType="com.meida.front.pay.domain.dto.FundAmountListDto"
		resultType="java.lang.Long">
		select count(*) from tb_fund_amount
		where isValid=1
		<if test="memberId != null and memberId!=''">
			AND memberId like "%"#{memberId}"%"
		</if>		
		LIMIT
		#{pagination.pageIndex},#{pagination.pageSize}
	</select>


	<insert id="save"
		parameterType="com.meida.front.pay.domain.po.FundAmount">
		insert into tb_fund_amount
		(memberId,totalMoney,createDate,operateDate,operatorId,isValid,remark,signature)
		values
		(#{memberId},#{totalMoney},#{createDate},#{operateDate},#{operatorId},#{isValid},#{remark},#{signature})

	</insert>


	<update id="update"
		parameterType="com.meida.front.pay.domain.po.FundAmount">
		update tb_fund_amount
		<set>
			<if test="memberId!=null">
				memberId=#{memberId},
			</if>			
			<if test="totalMoney!=null">
				totalMoney=#{totalMoney},
			</if>			
			<if test="operateDate!=null">
				operateDate=#{operateDate},
			</if>
			<if test="operatorId!=null">
				operatorId=#{operatorId},
			</if>
			<if test="remark!=null">
				remark=#{remark}
			</if>
			<if test="signature!=null">
				signature=#{signature}
			</if>
		</set>
		where fundAmountId=#{fundAmountId}
	</update>
	<update id="updateByMemberId"
		parameterType="com.meida.front.pay.domain.po.FundAmount">
		update tb_fund_amount
		<set>
			<if test="memberId!=null">
				memberId=#{memberId},
			</if>			
			<if test="totalMoney!=null">
				totalMoney=#{totalMoney},
			</if>			
			<if test="operateDate!=null">
				operateDate=#{operateDate},
			</if>
			<if test="operatorId!=null">
				operatorId=#{operatorId},
			</if>
			<if test="remark!=null">
				remark=#{remark}
			</if>
			<if test="signature!=null">
				signature=#{signature}
			</if>
		</set>
		where memberId=#{memberId}
	</update>


	<delete id="deletePhysicalById" parameterType="java.lang.Long">
		delete from
		tb_fund_amount
		where fundAmountId=#{id}
	</delete>


	<delete id="deleteLogicById" parameterType="java.lang.Long">
		update
		tb_fund_amount set
		isValid=-1 where fundAmountId=#{id}
	</delete>

</mapper>